package Solution5;

import java.util.Arrays;
import java.util.HashMap;
import java.util.Map;

public class Solu5Prac1 {

	public int[] solution(String s) {

		Map<Character, Integer> HashM = new HashMap<>();
		int[] answer = new int[5];
		String text = s;

		for (char key : text.toCharArray()) {
			HashM.put(key, HashM.getOrDefault(key, 0) + 1);
		}
		System.out.println(HashM);

		int max = HashM.get(text.charAt(0));

		for (int i = 0; i < text.length(); i++) {
			if (max < HashM.get(text.charAt(i))) {
				max = HashM.get(text.charAt(i));
			}
		}
		System.out.println("ÃÖ´ë °ª : " + max);

		for (int i = 0; i < text.length(); i++) {

			if (HashM.get(text.charAt(i)) < max) {
				int plusNum = max - HashM.get(text.charAt(i));
				HashM.replace(text.charAt(i), plusNum);
			} else if (HashM.get(text.charAt(i)) == max) {
				HashM.replace(text.charAt(i), -1);
			}
		}
		
		System.out.println(HashM);
		
		int i = 0;
		for (int value : HashM.values()) {
			answer[i] = value;
			i++;
		}
		
		return answer;
	}

	public static void main(String[] args) {
		Solu5Prac1 T = new Solu5Prac1();
		System.out.println(Arrays.toString(T.solution("aaabc")));
//		System.out.println(Arrays.toString(T.solution("aabb")));
//		System.out.println(Arrays.toString(T.solution("abcde")));
//		System.out.println(Arrays.toString(T.solution("abcdeabc")));
//		System.out.println(Arrays.toString(T.solution("abbccddee")));
	}
}
